#!/usr/bin/env node

require('babel-core/register');

var config = require('../config');
var Firebase = require('firebase');
var firebase = new Firebase(config.urls.firebase);

function removeComplete (err) {
  if (err) {
    console.error('Failed to drop database.', err.message);
    process.exit(1);
  } else {
    console.log('Successfully dropped the database.')
    process.exit(0);
  }
}

switch (process.argv[2]) {
  case 'drop':
    firebase.remove(removeComplete);
    break;
  default:
    console.error('Unknown command');
    process.exit(1);
}
