{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env"     : {
    "browser": true
  },
  "globals" : {
    "__DEV__": false,
    "__PROD__": false,
    "__DEBUG__": false,
    "__DEBUG_NEW_WINDOW__": false,
    "webkitSpeechRecognition": false
  },
  "rules": {
    "semi": [2, "always"],
    "new-cap": 0
  }
}
